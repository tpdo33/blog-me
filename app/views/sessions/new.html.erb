<h1 align = "center"> Login </h1>

	<form action ="/login" method ="post" id ="user[id]">
	<input type ="hidden" name ="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label">Email </label>
		<div class ="col-sm-10">
			<input type ="email" class ="form-control" name ="session[email]" placeholder="Enter email">
		</div>
	</div>
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label">Password </label>
		<div class ="col-sm-10">
			<input type ="password" class ="form-control" name ="session[password]" placeholder ="Enter password">
		</div>
	</div>
	<div class ="form-group row">
		<div class ="col-sm-offset-2 col-sm-10">
			<button type ="submit" class ="btn btn-primary btn-lg">Sign in</button>
		</div>
	</div>
</form>

<!-- Cancel article creation and go back to article listings -->
<div class ="col-xs-4 col-xs-offset-4">
	[<%= link_to "Cancel request and return to articles listing", articles_path %>]
</div>