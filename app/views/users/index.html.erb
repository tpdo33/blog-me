<!-- List all users -->
<h1 align = "center"> All Blog Me Bloggers </h1>
<div align ="center">
	<%= will_paginate %>
</div>
<% @users.each do |user| %>
	<ul class = "listing">
		<div align ="center" class = "row">
			<div class ="well col-md-4 col-md-offset-4">
				<li><%= link_to gravatar_for(user), user_path(user) %> </li>
				<li class ="article-title">
					<%= link_to user.username, user_path(user) %>
				</li>
				<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
				<% if logged_in? and current_user.admin? %>
					<li> <%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all of their articles?"},class: "btn btn-xs btn-danger" %> </li>
				<% end %>
			</div>
		</div>
	</ul>
<% end %>

</div>
<div align ="center">
	<%= will_paginate %>
</div>